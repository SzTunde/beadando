import string 

def piglatin(str):
    str=str.split()
    s=''
    for word in str:
        if word[-1] not in string.punctuation:
            e=word[0]
            s=s+word[1:]+e+'ay'+' '
        else:
            f=word[0]
            s=s+word[1:-1]+f+'ay'+word[-1]+' '
    return s


print(piglatin('The quick brown fox.'))
