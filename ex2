def számrendszerváltó(lst,b1,b2):
    
    s=0
    ls0=[]
    for k in range(len(lst)-1,-1,-1):
        g=b1**k
        ls0.append(g)
    for i in range(0,len(lst)):
        s = s + ls0[i]*int(lst[i])
 
    str1=''
    while s!=0:
        e=s%b2
        str1=str1+str(e)
        s=s//b2
    str2=''
    for j in range(len(str1)-1,-1,-1):
        str2+=str(str1[j])
    ls2=list(str2)
    return ls2

